/* pages/topup.wxss */
.page-body {
  padding: 20px;
}

.container {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
}

.profile {
  width: 100px;
  height: 100px;
  box-shadow: rgba(100, 100, 111, 0.2) 0px 7px 29px 0px;
  border-radius: 100%;
  justify-content: center;
  align-items: center;
  display: flex;
}

.svg-icon {
  width: 95px;
  height: 95px;
}

.label {
  padding: 10px 0;
}

.input {
  border: 2px solid transparent;
  height: 3em;
  padding-left: 0.8em;
  overflow: hidden;
  background-color: #f3f3f3;
  border-radius: 10px;
  transition: all 0.5s;
}

.input:hover,
.input:focus {
  border: 2px solid #4a9dec;
  /* box-shadow: 0px 0px 0px 7px rgb(74, 157, 236, 10%); */
  background-color: white;
}

.list-amount {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  gap: 10px;
}

.amount {
  flex-grow: 1;
  box-shadow: rgba(17, 17, 26, 0.1) 0px 0px 16px;
  border-radius: 10px;
  height: 45px;
  padding: 10px;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 14px;
}
